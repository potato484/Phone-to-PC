{
  "name": "c2p-controller",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "node scripts/copy-vendor.mjs",
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "test": "pnpm build && node --test tests/**/*.test.mjs",
    "test:unit": "pnpm build && node --test tests/unit/**/*.test.mjs",
    "test:integration": "pnpm build && node --test tests/integration/**/*.test.mjs",
    "test:e2e": "pnpm build && node --test tests/e2e/**/*.test.mjs",
    "bench:reconnect": "node scripts/benchmark/reconnect-latency.mjs",
    "bench:session-load": "node scripts/benchmark/session-load.mjs",
    "bench:metrics-dump": "node scripts/benchmark/metrics-dump.mjs"
  },
  "dependencies": {
    "@xterm/addon-webgl": "^0.18.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "node-pty": "^1.1.0",
    "qrcode-terminal": "^0.12.0",
    "ws": "^8.18.0",
    "xterm": "^5.3.0",
    "xterm-addon-attach": "^0.9.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.2",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/ws": "^8.5.13",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
